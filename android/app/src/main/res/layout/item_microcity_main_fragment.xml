<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/item_microcity_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-smallcaps"
                android:maxLines="1"
                android:text="Nombre microcity"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_microcity_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_microcity_name_text"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="Direccion microcity"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/item_microcity_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="-5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:alpha="0.3"
                    android:src="@drawable/icon_marker_microcity" />

                <TextView
                    android:id="@+id/item_microcity_number_text"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="N"
                    android:textColor="@color/colorPrimary"
                    android:textSize="23sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_microcity_address_text"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_microcity_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="14 min"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_microcity_distance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="20dp"
                    android:text="30 km"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/item_microcity_services_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#FFFFFF"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_info_outline" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>